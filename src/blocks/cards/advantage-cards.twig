<div class="advantage-cards">
	
	{% set advantage = [
		{
			"image":"./img/fast-delivery.png",
			"title": "Быстрая доставка",
			"description": "Доставим бесплатно<br>от 2000 ₽ по всей России "
		},
		{
			"image":"./img/secure-payment.png",
			"title": "Безопасная оплата ",
			"description": "Плати безопасно и легко <br> онлайн на нашем сайте."
		},
		{
			"image":"./img/bonus-program.png",
			"title": "Бонусная программа",
			"description": "Дополнительная скидка <br> 15% при регистрации"
		},
		{
			"image":"./img/large-selection.png",
			"title": "Большой выбор",
			"description": "Ежегодно выходит в свет <br> более 100 книг"
		}


	] %}

	{% for offer in advantage %}
	<div class="advantage-cards__card">
		
<div class="advantage-cards__card-position">
	
<img src="{{ offer.image}}" alt="{{ offer.title}}">

<div class="advantage-cards__card-width"></div>

<div class="advantage-cards__offer-text">
	<p class="advantage-cards__title-text">{{ offer.title}}</p>
	<p class="advantage-cards__description-text">{{ offer.description | raw}}</p>
</div>
</div>

	</div>

	{% endfor %}
	
</div>